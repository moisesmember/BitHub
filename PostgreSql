create OR REPLACE VIEW ANALISE_VIEW AS
SELECT 
	A.ANAS_DTENVIO "DATA DE ENVIO DO PROJETO",
	A.ANAS_DTRESPOSTA "DATA DE RESPOSTA DO RESULTDO",
	A.ANAS_RESULTADO "RESULTADO DA ANÁLISE",	
	P.PROJCOD "CÓDIGO DO PROJETO",
	ASS.AS_CPF "C.P.F. DO ASSESSOR",
	ASS.AS_NOME "NOME DO ASSESSOR",
	G.GRAU_DESC "GRAU CIÊNTÍFICO DO ASSESSOR",		
	I.INST_SIGLA "SIGLA",
	I.INST_NOME "INSTITUIÇÃO EMPREGADORA",
	T.TIPO_NOME "TIPO DA INSTITUIÇÃO",
	P.TITULO "PROJETO P ANÁLISE",
	P.DURACAO "DURAÇÃO DO PROJETO (ANOS)",
	AP.AREANOME "ÁREA DE PESQUISA DO PROJETO",
	AP.AREAINDICE "ÍNDICE ÁREA PESQUISA DO PROJETO",
	PS.CPF "C.P.F. DO PESQUISADOR SOLICITANTE",
	PS.PESQ_NOME "NOME DO PESQUISADOR"
FROM ANALISE A INNER JOIN ASSESSOR ASS ON A.ANAS_ASCPF = ASS.AS_CPF
INNER JOIN PROJETO P ON A.ANAS_PROJCOD = P.PROJCOD
INNER JOIN GRAU_CIENTIFICO G ON G.GRAU_COD = ASS.AS_GRAUCOD
INNER JOIN INSTITUICAO I ON ASS.AS_INST_TRAB = I.INST_COD
INNER JOIN TIPO_INSTITUICAO T ON T.TIPO_COD = I.INSTIT_TIPO
INNER JOIN PESQUISADOR_SOLICITANTE PS ON PS.CPF = P.PROJ_PESQCPF
INNER JOIN AREA_PESQUISA AP ON P.PROJ_AREACOD = AP.AREACOD
ORDER BY AP.AREAINDICE;
